extends layout

block content
  .rounded-lg.px-4.py-12.bg-white.shadow-lg.flex-1.w-full
    .py-8.flex.text-blue-dark.text-5xl.font-light
      a(
        class="no-underline w-full"
        href="https://github.com/new"
        target="_blank"
      ) #{project}

      a(
        class="no-underline"
        href="/"
      ) ‚Ü©Ô∏é


    ul.list-reset 
      each value in projects
        li(
          class="py-2 text-blue-darkest text-xl font-light flex"
        ) 
          span.w-full #{value.name}
          if value.isFavourite
            form(
              class="flex-end"
              action="unfavourite",
              method="post"
            )
              input(
                type="hidden"
                name="project"
                value="#{value.name}"
              )
              button.favourite-button üëé
          else
            form(
              action="favourite"
              method="post"
            )
              input(
                type="hidden"
                name="project"
                value="#{value.name}"
              )
              button.favourite-button üòç

    script(
      src="scripts/app.js"
    )