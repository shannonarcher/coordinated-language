extends layout

block content
  .rounded-lg.px-4.py-12.bg-white.shadow-lg.flex-1.w-full
    .py-8.flex.text-blue-dark.text-4xl.font-light
      .w-full.flex.flex-row
        form(
          action="toggle-lock/adjective/#{adjective}",
          method="post"
          class="flex flex-row"
        )
          button.flex.flex-row.text-blue-dark
            if adjectiveLocked
              🔒#{adjective}
            else
              🔓#{adjective}
        span -
        form(
          action="toggle-lock/noun/#{noun}"
          method="post"
          class="flex flex-row"
        )
          button.flex.flex-row.text-blue-dark
            if nounLocked
              🔒#{noun}
            else
              🔓#{noun}

      a(
        class="no-underline"
        href="/"
      ) ↩︎


    ul.list-reset 
      each value in projects
        li(
          class="py-2 text-blue-darkest text-xl font-light flex"
        ) 
          span.w-full #{value.name}
          if value.isFavourite
            form(
              class="flex-end"
              action="unfavourite",
              method="post"
            )
              input(
                type="hidden"
                name="project"
                value="#{value.name}"
              )
              button.favourite-button 👎
          else
            form(
              action="favourite"
              method="post"
            )
              input(
                type="hidden"
                name="project"
                value="#{value.name}"
              )
              button.favourite-button 😍

    script(
      src="scripts/app.js"
    )